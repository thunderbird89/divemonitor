<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:text="TextView"/>

    <Spinner
        android:id="@+id/remoteMonitor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintLeft_toLeftOf="@+id/output"
        app:layout_constraintRight_toRightOf="@+id/output"
        app:layout_constraintTop_toBottomOf="@+id/output"/>

    <Button
        android:id="@+id/retrieveLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="retrieveLogs"
        android:text="@string/button_get_logs"/>

    <Button
        android:id="@+id/purge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="purgeDatabases"
        android:text="@string/button_purge_database"/>

</LinearLayout>