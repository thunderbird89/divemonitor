<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.provingground.divemonitor.ui.activity.Monitoring">

    <Button
        android:id="@+id/end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="stopMonitor"
        android:text="End Monitoring"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/grid"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/grid"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/grid" />

    <GridLayout
        android:layout_width="266dp"
        android:layout_height="225dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/grid">

        <TextView
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/orientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="TextView" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
